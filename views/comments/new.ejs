<!-- @format -->

<% layout('./layout/boilerplate.ejs') %>
<div class="container">
	<h1 id="new-head">
		Make New Comments For <%=campground.name%>
	</h1>
	<div class="row">
		<div id="form">
			<form action="/campground/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<label for="">Comment:</label>
					<textarea class="form-control" name="comment[text]" rows="3">
Your Comment</textarea>
				</div>
				<button class="btn btn-lg btn btn-outline-dark my-2">Submit</button>
			</form>
			<a href="/campground/<%=campground._id%>" class="text-dark">Go back</a>
		</div>
	</div>
</div>