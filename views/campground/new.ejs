<!-- @format -->

<% layout('./layout/boilerplate.ejs') %>
<div class="container">
	<h1 id="new-head">
		Add New Campground
	</h1>
	<div class="row">
		<div id="form">
			<form action="/campground" method="POST">
				<div class="form-group">
					<label for="name">Name:</label>
					<input id="name" class="form-control" type="text" name="name" placeholder="name" />
				</div>
				<div class="form-group">
					<label for="image">Price:</label>
					<input id="image" class="form-control" type="number" name="price" placeholder="price" />
				</div>
				<div class="form-group">
					<label for="image">Image URL:</label>
					<input id="image" class="form-control" type="text" name="image" placeholder="url of image" />
				</div>
				<div class="form-group">
					<label for="exampleFormControlTextarea1">Description</label>
					<textarea class="form-control" name="description" rows="3"></textarea>
				</div>
				<button class="btn btn-lg btn btn-outline-dark">Submit</button>
			</form>
			<a href="/campground" class="text-dark">Go back</a>
		</div>
	</div>
</div>