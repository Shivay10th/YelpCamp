<!-- @format -->

<% layout('./layout/boilerplate.ejs') %>
<div class="container">
	<h1 id="new-head">
		Edit <%= campground.name %>
	</h1>
	<div class="row">
		<div id="form">
			<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="name">Name:</label>
					<input id="name" class="form-control" type="text" name="campground[name]"
						value="<%= campground.name %>" />
				</div>
				<div class="form-group">
					<label for="image">Price:</label>
					<input id="image" class="form-control" type="number" name="campground[price]"
						value="<%= campground.price %> " />
				</div>
				<div class="form-group">
					<label for="image">Image URL:</label>
					<input id="image" class="form-control" type="text" name="campground[image]"
						value="<%= campground.image %>" />
				</div>
				<div class="form-group">
					<label for="exampleFormControlTextarea1">Description</label>
					<textarea class="form-control" name="campground[description]" rows="3">
<%= campground.body %></textarea>
				</div>
				<button class="btn btn-lg btn btn-outline-dark">Submit</button>
			</form>
			<a href="/campground" class="text-dark">Go back</a>
		</div>
	</div>
</div>